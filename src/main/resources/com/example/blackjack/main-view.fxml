<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.blackjack.MainController">
   <children>
      <Label alignment="CENTER" text="Blackjack" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="25.0">
         <font>
            <Font name="Verdana" size="52.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" layoutX="250.0" layoutY="100.0" prefHeight="259.0" prefWidth="100.0" spacing="50.0" AnchorPane.leftAnchor="125.0" AnchorPane.rightAnchor="125.0" AnchorPane.topAnchor="100.0">
         <children>
            <Label fx:id="ngLabel" onMouseClicked="#onNGLabelClicked" text="New Game">
               <font>
                  <Font size="19.0" />
               </font>
            </Label>
            <Label fx:id="lgLabel" onMouseClicked="#onLGLabelClicked" text="Load Game">
               <font>
                  <Font size="19.0" />
               </font>
            </Label>
            <Label fx:id="helpLabel" onMouseClicked="#onHelpLabelClicked" text="Help">
               <font>
                  <Font size="19.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
